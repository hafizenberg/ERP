                        <div class="col-md-12">
                            @Html.LabelFor(model => model.AddressLineOne, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.AddressLineOne, new { htmlAttributes = new { @class = "form-control" } })
