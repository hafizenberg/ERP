@model IEnumerable<ChandrimERP.Models.Product>

@{
    ViewBag.Title = "BarcodeIndex";
}

<h2>BarcodeIndex</h2>

<div style="float: right; padding-right: 25px; padding-bottom: 5px; padding-top: 10px;"><input type="text" id="search" placeholder="live search" /></div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Barcode)
        </th>
        <td>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </td>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Barcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>

            <td>
                <button class="btn btn-outline-primary button button4">@Html.ActionLink("Print", "BarcodeProccess", new { id = item.ProductId })</button>

            </td>
        </tr>
    }
</table>
@section Scripts
{
    <script>
        $(document).ready(function () {
            productBarcodeIndex();
        });
    </script>
}