            $("#my_table").DataTable({
                "ajax": {
                    "url": "/Inventory/InventoryDetailsData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": "Date",
                        "type": "date",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                        }
                    },
                    { "data": "Name" },
                    { "data": "Vouchertype" },
                    { "data": "VoucherNo" },
