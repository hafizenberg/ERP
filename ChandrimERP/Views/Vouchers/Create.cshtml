@model ChandrimERP.Models.Voucher
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .cusform {
        width: 300px;
        height: auto;
        border: 1px solid #ccc;
        background-color: #f3f3f3;
        padding: 15px 15px 0px 15px;
    }

    .content-body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
</style>
<div class="content-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal cusform">
            <h4 class="text-center">Create Voucher</h4>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12 inputGroupContainer">
                        @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "control-label" })
                        <div class="d-flex">
                            <span class="input-group-addon cuspadding">
                                <i class="fa fa-building"></i>
                            </span>
                            @Html.DropDownList("CompanyId", null, "Select Company", htmlAttributes: new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 inputGroupContainer">
                        @Html.LabelFor(model => model.VoucherType, htmlAttributes: new { @class = "control-label" })
                        <div class="d-flex">
                            <span class="input-group-addon cuspadding">
                                <i class="fa fa-wpforms"></i>
                            </span>
                            @Html.EditorFor(model => model.VoucherType, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Voucher Type" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.VoucherType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 inputGroupContainer">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        <div class="d-flex">
                            <span class="input-group-addon cuspadding">
                                <i class="fa fa-wpforms"></i>
                            </span>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Voucher Name" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 inputGroupContainer">
                        @Html.LabelFor(model => model.Prefix, htmlAttributes: new { @class = "control-label" })
                        <div class="d-flex">
                            <span class="input-group-addon cuspadding">
                                <i class="fa fa-pencil-square-o"></i>
                            </span>
                            @Html.EditorFor(model => model.Prefix, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Prefix" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Prefix, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    }
    <div class="clearfix"></div>
</div>