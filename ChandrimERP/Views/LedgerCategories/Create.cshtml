@model ChandrimERP.Models.LedgerCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal cusform">
            <h4 class="text-center">Create Ledger Category</h4>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-group">
                <div class="col-md-12 inputGroupContainer">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    <div class="d-flex">
                        <span class="input-group-addon cuspadding">
                            <i class="fa fa-book"></i>
                        </span>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Ledger Category Name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 inputGroupContainer">
                    @Html.LabelFor(model => model.ChartOfAccountId, htmlAttributes: new { @class = "control-label" })
                    <div class="d-flex">
                        <span class="input-group-addon cuspadding">
                            <i class="fa fa-money"></i>
                        </span>
                        @Html.DropDownList("ChartOfAccountId", null, "Select Chart of Account", new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ChartOfAccountId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 inputGroupContainer">
                    @Html.LabelFor(model => model.ParentLedgerCatId, htmlAttributes: new { @class = "control-label" })
                    <div class="d-flex">
                        <span class="input-group-addon cuspadding">
                            <i class="fa fa-book"></i>
                        </span>
                        @Html.DropDownList("ParentLedgerCatId", (IEnumerable<SelectListItem>)ViewBag.ParentLedgerCatId, "Select Ledger Category", new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ParentLedgerCatId, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </div>
                </div>

            <div class="clearfix"></div>
        </div>
    }
    <div class="clearfix"></div>
</div>