<h2>@ViewBag.Title</h2>


<style>
    .dataTables_length label {
        margin-top: 15px;
        color: #000080;
    }

    .Button {
        padding: 5px 10px;
        margin: 5px;
        background-color: #4b0082;
        color: White;
        border-radius: 15%;
    }

        .Button:hover {
            background-color: #00bfff;
            color: white;
        }

    .table-1 {
        color: #00008b;
        font-weight: bold;
        float: left;
    }

        .table-1 tr {
            float: left;
        }

    .dataTables_filter input {
        padding: 5px 2px;
        border-radius: 5px;
    }

    #my_table th {
        background-color: #d2d6de;
        color: black;
    }

    .dt-buttons {
        float: left;
    }
</style>

<table id="my_table" class="display">

    <thead>
        <tr>
            <th>Branch Name</th>
            <th>Company Name</th>
            <th>Warehouse Name</th>
            <th>Description</th>
            <th>Asset Code</th>
            <th>Asset Value</th>
            <th>Asset Life</th>
            <th>Depreciation Rate</th>
            <th>Depreciation EffectFrom</th>
            <th>Salvage Value</th>
            <th>Purchase Date</th>
            <th>Warrenty Details</th>
        </tr>
    </thead>

</table>

