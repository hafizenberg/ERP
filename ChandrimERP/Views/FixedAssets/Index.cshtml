    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/datepicker/0.6.5/datepicker.js"></script>

    <script>
        $(document).ready(function () {
            $("#my_table").DataTable({
                "ajax": {
                    "url": "/FixedAssets/GetList",
                    "type": "GET",
                    "datatype": "json"
                },

                //"ajax" : {
                //    type: "POST",
                //    url: "/FixedAssets/GetList",
                //    data: '{a:'+ 1 +' }',
                //    contentType: "application/json; charset=utf-8",
                //    dataType: "json",
                //},


                "columns": [
                    { "data": "BranchNames" },
                    { "data": "CompanyNames" },
                    { "data": "WarehouseNames" },
                    { "data": "Description" },
                    { "data": "AssetCode" },
                    { "data": "AssetValue" },
                    { "data": "AssetLife" },
                    { "data": "DepreciationRate" },
                    {"data": "DepreciationEffectFrom",
                        "type": "date ",
                        "render": function (value) {
                            if (value === null) return "";
                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                        }
                    },
                    { "data": "SalvageValue" },
                    {"data": "PurchaseDate",
                        "type": "date ",
                        "render": function (value) {
                            if (value === null) return "";
                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                        }
                    },
                    { "data": "WarrentyDetails" }
                ],
                "dom": "lrBftip",
                "buttons": [
                    {
                        extend: 'copy',
                        className: 'Button',
                        text: '<i class="fa fa-copy" aria-hidden="true"></i> Copy'
                    },
                    {
                        extend: 'excel',
                        className: 'Button',
                        text: '<i class="fa fa-file-excel-o" aria-hidden="true"></i> Excel'
                    },
                    {
                        extend: 'pdf',
                        className: 'Button',
                        text: '<i class="fa fa-file-pdf-o" aria-hidden="true"></i> Pdf'
                    },
                    {
                        extend: 'csv',
                        className: 'Button',
                        text: '<i class="fa fa-file-text"></i> CSV'
                    },
                    {
                        extend: 'print',
                        className: 'Button',
                        text :'<i class="fa fa-print" aria-hidden="true"></i> Print'
                    }

                ]
            });

        });








