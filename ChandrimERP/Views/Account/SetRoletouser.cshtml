                    <div class="form-horizontal">
                        <h4>Set User Role</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="checkbox">

                            @foreach (var item in ViewBag.Roles)
                            {
                                <input type="checkbox" name="rolelist" value="@item" /><label id="@item"> </label><br />
                            }
                        </div>


                        <div class="form-group">
                            <div style="float: right;" class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Set Role" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="data">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

