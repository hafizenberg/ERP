@using System.Web.Optimization
@model ChandrimERP.Models.EmployeePayrollPolicy

@{
    ViewBag.Title = "Create";
}
<div class="container" style="padding-top: 200px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal col-md-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-8">
                    @Html.DropDownList("EmployeesId", null, "Select Employee", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EmployeesId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    @Html.EditorFor(model => model.PpolicyName, new { htmlAttributes = new { @class = "form-control", @placeholder = "NomineeName" } })
                    @Html.ValidationMessageFor(model => model.PpolicyName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Ppay, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pay" } })
                    @Html.ValidationMessageFor(model => model.Ppay, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Pstatus, new { htmlAttributes = new { @class = "form-control", @placeholder = "Paying Status" } })
                    @Html.ValidationMessageFor(model => model.Pstatus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Paccount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Paying Account" } })
                    @Html.ValidationMessageFor(model => model.Paccount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div>
            </div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }

    
</div>
@section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
}
